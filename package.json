{
  "name": "cashlab",
  "version": "0.1.3-beta.1",
  "description": "A module to create, inspect & validate bch contracts/transactions.",
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc -p config/tsconfig.json",
    "test": "c8 ava",
    "test:xc8": "ava",
    "doc": "npm run doc:html && npm run doc:extract && npm run doc:generate",
    "doc:html": "typedoc src/index.ts --out build/docs",
    "doc:extract": "mkdir -p build/api && api-extractor run --local",
    "doc:generate": "api-documenter markdown -i temp -o build/api/markdown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hosseinzoda/cashlab.git"
  },
  "keywords": [
    "BCH",
    "defi"
  ],
  "author": "Hossein Zoda",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hosseinzoda/cashlab/issues"
  },
  "homepage": "https://github.com/hosseinzoda/cashlab#readme",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@microsoft/api-documenter": "^7.24.2",
    "@microsoft/api-extractor": "^7.43.1",
    "@types/node": "^20.14.10",
    "ava": "^6.1.2",
    "c8": "^9.1.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "files": [
    "config",
    "src",
    "build",
    "!build/.tsbuildinfo",
    "!build/**/*.map",
    "!build/**/tests",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      },
      "compile": false
    },
    "nodeArguments": [
      "--experimental-json-modules",
      "--disable-warning=ExperimentalWarning"
    ]
  },
  "c8": {
    "exclude": [
      "**/tests/*.js"
    ]
  },
  "dependencies": {
    "@bitauth/libauth": "^3.0.0"
  },
  "volta": {
    "node": "20.18.0"
  }
}
